{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Submit Spark Job",
            "type": "shell",
            "command": "docker exec spark-client bash -c 'spark-submit --master $SPARK_MASTER_URI --jars $MYSQL_CONNECTORJ_PATH --driver-class-path $MYSQL_CONNECTORJ_PATH --executor-memory 1g --num-executors 2 --executor-cores 1 ./jobs/${fileBasename} ${input:date}'"
        }
    ],
    "inputs": [
        {
            "id": "date",
            "description": "Execution Date",
            "default": "--date=2024-07-24",
            "type": "promptString"
        },
    ]
}